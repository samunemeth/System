# Simple settings.
set newtab https://blackscreen.app/
set theme shydactyl

# Set custom search patterns.
set searchurls.pkgs https://search.nixos.org/packages?query=
set searchurls.mynixos https://mynixos.com/search?q=
set searchurls.wiki https://en.wikipedia.org/w/index.php?search=

# Unbind the leader key.
unbind <space>
unbind <S-space>

# Some simple bindings.
bind <C-C> echo "This does nothing."
bind e tabnext
bind E tabprev

# Bindings for searching.
bind <space>/ fillcmdline find 
bind <space>, nohlsearch
bind n findnext
bind N findnext -?

bind <space><space> fillcmdline bmarks
bind <space>t fillcmdline tab
bind <space>f tabopen file:///home/
